@using ECommerceProject.Application.DTOs.Order


@model IEnumerable<GetOrderDto>

<div class="w-100 card border-0 p-4">
    <div class="card-header gg-title ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
       
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Order Id
                    </th>
                    <th>Total Amount</th>
                    <th>Order Status</th>
                    <th>Payment Status</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.Id</td>
                        <td>@prod.TotalAmount</td>
                        <td>@prod.OrderStatus</td>
                        <td>@prod.PaymentStatus</td>
                        <td>@prod.CreatedAt</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

