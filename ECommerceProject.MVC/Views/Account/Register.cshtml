@using ECommerceProject.Application.DTOs.Account

@model RegisterUser


<div class="w-100 card border-0 p-4">
    <div class="card-header gg-title ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @SharedLocalizer["CreateNewAccount"]
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row" asp-controller="Account" asp-action="Register">
            <div class="p-3">

                <!-- First Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="FirstName" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["FirstName"]
                    </label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="LastName" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["LastName"]
                    </label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Email" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["Email"]
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- User Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="UserName" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["UserName"]
                    </label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Password" type="password" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["Password"]
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="ConfirmPassword" type="password" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["ConfirmPassword"]
                    </label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Selected Role -->
                <div class="form-group py-2">
                    <label>
                        @SharedLocalizer["RegisterAs"]
                    </label>
                    <select asp-for="SelectedRole" class="form-control">
                        <option value="">
                            @SharedLocalizer["SelectRole"]
                        </option>
                        <option value="Buyer">
                            @SharedLocalizer["Buyer"]
                        </option>
                        <option value="Seller">
                            @SharedLocalizer["Seller"]
                        </option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i>
                            @SharedLocalizer["Create"]
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i>
                            @SharedLocalizer["Cancel"]
                        </a>
                    </div>
                </div>

            </div>
        </form>

        <div class="row my-4">
            <div class="col-12 text-center">
                <hr />
                <span class="text-muted fw-bold">
                    @SharedLocalizer["OrRegisterWith"]
                </span>
            </div>
        </div>

        <div class="row text-center pb-3">

            <div class="card border-0 bg-light-subtle p-3">


                
                    <!-- Google -->
                <a asp-controller="Account"
                   asp-action="ExternalLogin"
                   asp-route-provider="Google"
                   class="btn btn-light border w-100 mb-2 d-flex align-items-center justify-content-center gap-2">
                    <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
                         width="18" height="18" />
                    <span class="fw-medium">
                        @SharedLocalizer["ContinueWithGoogle"]
                    </span>
                </a>

