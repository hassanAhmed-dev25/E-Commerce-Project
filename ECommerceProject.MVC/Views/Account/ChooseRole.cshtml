<form asp-action="ChooseRole" method="post">

    <h4>@SharedLocalizer["RegisterAs"]</h4>

    <div class="form-check">
        <input class="form-check-input"
               type="radio"
               name="selectedRole"
               value="Buyer" />
        <label class="form-check-label">
            @SharedLocalizer["Buyer"]
        </label>
    </div>

    <div class="form-check">
        <input class="form-check-input"
               type="radio"
               name="selectedRole"
               value="Seller" />
        <label class="form-check-label">
            @SharedLocalizer["Seller"]
        </label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        @SharedLocalizer["Continue"]
    </button>

</form>
