
@{
    ViewData["Title"] = SharedLocalizer["ConfirmEmailTitle"];
}

<div class="container mt-5 text-center">
    <h2 class="text-success">
        📧 @SharedLocalizer["CheckYourEmailTitle"]
    </h2>

    <p class="mt-3">
        @SharedLocalizer["EmailSentMessage"]
    </p>

    <p>
        @SharedLocalizer["ActivateAccountInstruction"]
    </p>

    <p class="text-muted mt-4">
        @SharedLocalizer["CheckSpamNote"]
    </p>

    <a href="/Account/Login" class="btn btn-outline-primary mt-3">
        @SharedLocalizer["GoToLogin"]
    </a>
</div>
