@using ECommerceProject.Application.DTOs.Account
﻿

@model ResetPasswordDto


<div class="w-100 card border-0 p-4">
    <div class="card-header gg-title ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create New Account</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" asp-controller="Account" asp-action="ResetPassword">
            <div class="p-3">

                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />
              

                <!-- Password -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="NewPassword" class="form-control border shadow" />
                    <label asp-for="NewPassword" class="ms-2"></label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>


                <!-- Confirm Password -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="ConfirmPassword" class="form-control border shadow" />
                    <label asp-for="ConfirmPassword" class="ms-2"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>




                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>



