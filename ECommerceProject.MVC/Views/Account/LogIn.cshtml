@using ECommerceProject.Application.DTOs.Account

@model LogInUser


<div class="w-100 card border-0 p-4">
    <div class="card-header gg-title ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @SharedLocalizer["LoginTitle"]
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row" asp-controller="Account" asp-action="LogIn">
            <div class="p-3">

                <!-- Email -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Email" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["Email"]
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Password" type="password" class="form-control border shadow" />
                    <label class="ms-2">
                        @SharedLocalizer["Password"]
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Remember me -->
                <div class="form-check py-2">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label">
                        @SharedLocalizer["RememberMe"]
                    </label>
                </div>

                <!-- Forgot Password -->
                <div class="form-check py-2">
                    <a asp-controller="Account"
                       asp-action="ForgetPassword"
                       class="text-decoration-none small">
                        @SharedLocalizer["ForgotPassword"]
                    </a>
                </div>

                <!-- Buttons -->
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i>
                            @SharedLocalizer["Login"]
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i>
                            @SharedLocalizer["Cancel"]
                        </a>
                    </div>
                </div>

            </div>
        </form>

        <div class="row my-4">
            <div class="col-12 text-center">
                <hr />
                <span class="text-muted fw-bold">
                    @SharedLocalizer["OrLoginWith"]
                </span>
            </div>
        </div>


        <div class="row text-center pb-3">

            <div class="card border-0 bg-light-subtle p-3">



                <!-- Google -->
                <a asp-controller="Account"
                   asp-action="ExternalLogin"
                   asp-route-provider="Google"
                   class="btn btn-light border w-100 mb-2 d-flex align-items-center justify-content-center gap-2">
                    <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
                         width="18" height="18" />
                    <span class="fw-medium">
                        @SharedLocalizer["ContinueWithGoogle"]
                    </span>
                </a>

                @*     <!-- Microsoft -->
                <a asp-controller ="Account"
                   asp-action="ExternalLogin"
                   asp-route-provider="Microsoft"
                   class="btn btn-light border w-100 mb-2 d-flex align-items-center justify-content-center gap-2">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg"
                         width="18" height="18" />
                    <span class="fw-medium">
                        @SharedLocalizer["ContinueWithMicrosoft"]
                    </span>
                </a>

                    <!-- Facebook -->
                <a asp-controller="Account"
                   asp-action="ExternalLogin"
                   asp-route-provider="Facebook"
                   class="btn btn-light border w-100 d-flex align-items-center justify-content-center gap-2">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg"
                         width="18" height="18" />
                    <span class="fw-medium">
                        @SharedLocalizer["ContinueWithFacebook"]
                    </span>
                </a> *@



            </div>


        </div>


    </div>
</div>
