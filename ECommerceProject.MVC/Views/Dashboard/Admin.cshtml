@using ECommerceProject.MVC.ViewModels
@model GetAdminDataForDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="p-4 bg-light min-vh-100">

        <!-- Header -->
        <div class="mb-4">
            <h3 class="mb-1">@SharedLocalizer["AdminDashboard"]</h3>
            <small class="text-muted">@SharedLocalizer["SystemOverview"]</small>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3">

            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 text-primary fw-bold">
                        <i class="bi bi-cash-stack fs-4 me-2"></i>
                        @SharedLocalizer["TotalRevenue"]
                    </div>
                    <h3 class="fw-bold">$@Model.TotalRevenue</h3>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 text-primary fw-bold">
                        <i class="bi bi-receipt fs-4 me-2"></i>
                        @SharedLocalizer["TotalOrders"]
                    </div>
                    <h3 class="fw-bold">@Model.TotalOrders</h3>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100 border-warning">
                    <div class="d-flex align-items-center mb-2 text-warning fw-bold">
                        <i class="bi bi-hourglass-split fs-4 me-2"></i>
                        @SharedLocalizer["PendingWithdrawals"]
                    </div>
                    <h3 class="fw-bold text-warning">
                        @Model.PendingWithdrawals
                    </h3>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 text-primary fw-bold">
                        <i class="bi bi-people fs-4 me-2"></i>
                        @SharedLocalizer["TotalUsers"]
                    </div>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                </div>
            </div>

        </div>

        <!-- Quick Actions -->
        <div class="row mt-4 g-3">

            <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6>
                        <i class="bi bi-arrow-down-up me-1"></i>
                        @SharedLocalizer["ManageWithdrawals"]
                    </h6>
                    <p class="small text-muted">
                        @SharedLocalizer["ManageWithdrawalsDesc"]
                    </p>
                    <a asp-controller="Admin"
                       asp-action="ManageWithdrawals"
                       class="btn btn-outline-warning btn-sm">
                        @SharedLocalizer["ViewWithdrawals"]
                    </a>
                </div>
            </div>

            @* <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6>
                        <i class="bi bi-box-seam me-1"></i>
                        Manage Products
                    </h6>
                    <p class="small text-muted">
                        Review, approve or remove products.
                    </p>
                    <a asp-controller="Admin"
                       asp-action="Products"
                       class="btn btn-outline-primary btn-sm">
                        View products
                    </a>
                </div>
            </div> *@

            <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6>
                        <i class="bi bi-people me-1"></i>
                        @SharedLocalizer["ManageUsers"]
                    </h6>
                    <p class="small text-muted">
                        @SharedLocalizer["ManageUsersDesc"]
                    </p>
                    <a asp-controller="Admin"
                       asp-action="ManageUsers"
                       class="btn btn-outline-danger btn-sm">
                        @SharedLocalizer["ViewUsers"]
                    </a>
                </div>
            </div>

        </div>

    </div>
</div>
