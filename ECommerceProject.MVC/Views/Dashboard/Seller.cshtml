@using ECommerceProject.MVC.ViewModels

@model GetSellerDataForDashboardVM

@{
    ViewData["Title"] = "Seller Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="p-4 bg-light min-vh-100">

        <!-- Header -->
        <div class="mb-4">
            <h3 class="mb-1">@SharedLocalizer["SellerDashboard"]</h3>
            <small class="text-muted">@SharedLocalizer["SellerDashboardDesc"]</small>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3">

            <!-- Total Sales -->
            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 fw-bold text-primary">
                        <i class="bi bi-cash-stack fs-4 me-2"></i>
                        <span class="fw-semibold fs-6">@SharedLocalizer["TotalSales"]</span>
                    </div>
                    <h3 class="fw-bold mb-0">$@Model.TotalSales</h3>
                </div>
            </div>

            @* <!-- Total Orders -->
            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 fw-bold text-primary">
                        <i class="bi bi-bag-check fs-4 me-2"></i>
                        <span class="fw-semibold fs-6">Total Orders</span>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.TotalOrders</h3>
                    <a asp-controller="Order" asp-action="Index" class="small text-primary">
                        View orders →
                    </a>
                </div>
            </div> *@



            <!-- Wallet Balance -->
            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100">
                    <div class="d-flex align-items-center mb-2 fw-bold text-primary">
                        <i class="bi bi-wallet2 fs-4 me-2"></i>
                        <span class="fw-semibold fs-6">@SharedLocalizer["WalletBalance"]</span>
                    </div>
                    <h3 class="fw-bold mb-1">$@Model.WalletBalance</h3>
                    <a asp-controller="Wallet" asp-action="Index" class="small text-primary">
                        @SharedLocalizer["ViewWallet"]
                    </a>
                </div>
            </div>


            <!-- Pending Withdrawals -->
            <div class="col-md-3">
                <div class="card shadow-sm p-3 h-100 border-warning">
                    <div class="d-flex align-items-center mb-2 fw-bold text-warning">
                        <i class="bi bi-hourglass-split fs-4 me-2"></i>
                        <span class="fw-semibold fs-6">@SharedLocalizer["PendingWithdrawals"]</span>
                    </div>
                    <h3 class="fw-bold text-warning mb-0">$@Model.PendingWithdrawals</h3>
                    <small class="text-muted">@SharedLocalizer["UnderReview"]</small>
                </div>
            </div>


        </div>

        <!-- Quick Actions -->
        <div class="row mt-4 g-3">

            <!-- Products -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6 class="mb-2">
                        <i class="bi bi-box-seam me-1"></i>
                        @SharedLocalizer["ManageProducts"]
                    </h6>
                    <p class="small text-muted mb-3">
                        @SharedLocalizer["ManageProductsDesc"]
                    </p>
                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-primary btn-sm">
                        @SharedLocalizer["GoToProducts"]
                    </a>
                </div>
            </div>

            <!-- Orders -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6 class="mb-2">
                        <i class="bi bi-receipt me-1"></i>
                        @SharedLocalizer["ViewOrders"]
                    </h6>
                    <p class="small text-muted mb-3">
                        @SharedLocalizer["ViewOrdersDesc"]
                    </p>
                    <a asp-controller="Order"
                       asp-action="Index"
                       class="btn btn-outline-primary btn-sm">
                        @SharedLocalizer["GoToOrders"]
                    </a>
                </div>
            </div>

            <!-- Withdrawal -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3 h-100">
                    <h6 class="mb-2">
                        <i class="bi bi-arrow-down-circle me-1"></i>
                        @SharedLocalizer["RequestWithdrawal"]
                    </h6>
                    <p class="small text-muted mb-3">
                        @SharedLocalizer["UpdateCategory"]
                    </p>
                    <a asp-controller="Wallet"
                       asp-action="RequestWithdraw"
                       class="btn btn-outline-warning btn-sm">
                        @SharedLocalizer["RequestWithdrawal"]
                    </a>
                </div>
            </div>

        </div>

    </div>
</div>
