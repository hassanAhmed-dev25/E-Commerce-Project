@{
    ViewData["Title"] = "Payment Failed";
}

<div style="max-width:500px;margin:80px auto;text-align:center;font-family:Arial;">
    <div style="font-size:72px;color:#dc3545;">✖</div>

    <h2 style="margin-top:20px;">@SharedLocalizer["PaymentFailed"]</h2>

    <p style="color:#555;margin:20px 0;">
        Your payment was not completed.
        <br />
        @SharedLocalizer["PaymentFailedDesc"]
    </p>

    <a href="javascript:history.back()"
       style="display:inline-block;
              padding:12px 24px;
              background:#dc3545;
              color:white;
              text-decoration:none;
              border-radius:6px;">
        @SharedLocalizer["OutOfStock"]@SharedLocalizer["TryAgain"]
    </a>
</div>
