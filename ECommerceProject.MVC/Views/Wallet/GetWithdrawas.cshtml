

<div class="container my-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-clock-history me-2 text-primary"></i>
                    @SharedLocalizer["WithdrawalHistory"]
                </h4>

                <a asp-action="RequestWithdraw"
                   class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-cash-stack me-2"></i>
                    @SharedLocalizer["NewWithdrawal"]
                </a>

            </div>

            <div class="table-responsive">
                <table id="WithdrawalRequestTable"
                       class="table table-hover align-middle w-100">

                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["WalletId"]</th>
                            <th>@SharedLocalizer["Amount"]</th>
                            <th>@SharedLocalizer["Status"]</th>
                            <th>@SharedLocalizer["RequestedAt"]</th>
                            <th>@SharedLocalizer["Action"]</th>
                            
                        </tr>
                    </thead>

                </table>
            </div>

        </div>
    </div>
</div>


@section Scripts {

    <!-- Data Table -->
    <script src="~/DataTables/datatables.min.js"></script>

    <!-- Custom Table Script -->
    <script src="~/js/custom/withdrawalrequeststable.js"></script>

}