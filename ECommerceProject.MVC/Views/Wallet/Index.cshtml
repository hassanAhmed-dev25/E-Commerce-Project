<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4 text-center">

                    <!-- Wallet Icon -->
                    <div class="mb-3">
                        <i class="bi bi-wallet2 text-primary fs-1"></i>
                    </div>

                    <!-- Title -->
                    <h4 class="fw-bold mb-1">Wallet Balance</h4>
                    <small class="text-muted">Available balance</small>

                    <!-- Balance -->
                    <h2 class="fw-bold text-success mt-3">
                        @Model.Balance.ToString("C")
                    </h2>

                    <hr class="my-4" />

                    <!-- Actions -->
                    <div class="d-flex justify-content-center gap-3">

                        <a asp-controller="Wallet" asp-action="Withdraw"
                           class="btn btn-primary px-4 rounded-pill">
                            <i class="bi bi-cash-stack me-2"></i>
                            Request Withdrawal
                        </a>

                        <a asp-controller ="Wallet" asp-action="GetWithdrawals"
                           class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="bi bi-clock-history me-2"></i>
                            History
                        </a>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
