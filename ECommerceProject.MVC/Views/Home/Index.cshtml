@using ECommerceProject.Application.DTOs.Category

@model IEnumerable<GetCategoryDto>

@{
    ViewData["Title"] = "Home Page";
}




<!-- Welcome -->
<section class="hero text-center py-5 bg-light">
    <h1 class="display-5 fw-bold">@SharedLocalizer["WelcomeTitle"]</h1>
    <p class="lead text-muted">@SharedLocalizer["WelcomeSubtitle"]</p>

    <a asp-controller="Product" asp-action="ShowAllProducts"
       class="btn btn-primary btn-lg mt-3">
        @SharedLocalizer["BrowseProducts"]
    </a>
</section>




<!-- Categories -->
<section class="container my-5">
    <h2 class="text-center mb-4">@SharedLocalizer["ShopByCategory"]</h2>

    <div class="row">
        @foreach (var cat in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body">
                        <h5>@SharedLocalizer[@cat.Name]</h5>

                        <a asp-controller="Product"
                           asp-action="ShowAllProducts"
                           asp-route-catgId="@cat.Id"
                           class="btn btn-outline-primary btn-sm mt-2">
                            @SharedLocalizer["ViewProducts"]
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>




<!-- Info -->
<section class="bg-dark text-white py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <h4>@SharedLocalizer["FastDeliveryTitle"]</h4>
                <p>@SharedLocalizer["FastDeliveryDesc"]</p>
            </div>
            <div class="col-md-4">
                <h4>@SharedLocalizer["SecurePaymentTitle"]</h4>
                <p>@SharedLocalizer["SecurePaymentDesc"]</p>
            </div>
            <div class="col-md-4">
                <h4>@SharedLocalizer["BestPricesTitle"]</h4>
                <p>@SharedLocalizer["BestPricesDesc"]</p>
            </div>
        </div>
    </div>
</section>



<!-- Shop Now -->
<section class="text-center my-5">
    <h3>@SharedLocalizer["StartShopping"]</h3>

    <a asp-controller="Product"
       asp-action="ShowAllProducts"
       class="btn btn-success btn-lg mt-3">
        @SharedLocalizer["ShopNow"]
    </a>
</section>
