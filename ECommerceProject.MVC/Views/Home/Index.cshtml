@using ECommerceProject.Application.DTOs.Category

@model IEnumerable<GetCategoryDto>

@{
    ViewData["Title"] = "Home Page";
}




<!-- Welcome -->
<section class="hero text-center py-5 bg-light">
    <h1 class="display-5 fw-bold">Welcome to Our Store</h1>
    <p class="lead text-muted">Discover amazing products with great prices</p>

    <a asp-controller="Product" asp-action="ShowAllProducts"
       class="btn btn-primary btn-lg mt-3">
        Browse Products
    </a>
</section>




<!-- Categories -->
<section class="container my-5">
    <h2 class="text-center mb-4">Shop by Category</h2>

    <div class="row">
        @foreach (var cat in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body">
                        <h5>@cat.Name</h5>

                        <a asp-controller="Product"
                           asp-action="ShowAllProducts"
                           asp-route-catgId="@cat.Id"
                           class="btn btn-outline-primary btn-sm mt-2">
                            View Products
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>




<!-- Info -->
<section class="bg-dark text-white py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <h4>Fast Delivery</h4>
                <p>Get your order quickly</p>
            </div>
            <div class="col-md-4">
                <h4>Secure Payment</h4>
                <p>100% safe checkout</p>
            </div>
            <div class="col-md-4">
                <h4>Best Prices</h4>
                <p>Affordable and competitive</p>
            </div>
        </div>
    </div>
</section>



<!-- Shop Now -->
<section class="text-center my-5">
    <h3>Ready to start shopping?</h3>

    <a asp-controller="Product"
       asp-action="ShowAllProducts"
       class="btn btn-success btn-lg mt-3">
        Shop Now
    </a>
</section>
