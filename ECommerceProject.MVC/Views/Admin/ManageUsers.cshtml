

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">@SharedLocalizer["ManageUsers"]</h3>
    </div>

    <div class="table-responsive">
        <table id="ManageUsersTable"
               class="table table-hover align-middle w-100">

            <thead class="table-light">
                <tr>
                    <th>@SharedLocalizer["Email"]</th>
                    <th>@SharedLocalizer["Role"]</th>
                    <th>@SharedLocalizer["Status"]</th>
                    <th>@SharedLocalizer["Orders"]</th>
                    <th>@SharedLocalizer["Products"]</th>
                    <th>@SharedLocalizer["CreatedAt"]</th>
                    <th style="width: 180px;">@SharedLocalizer["Actions"]</th>

                </tr>
            </thead>
        </table>
    </div>

</div>


<!-- Block Modal -->
<partial name="_BlockUserModal" />

@section Scripts {

    <!-- Data Table -->
    <script src="~/DataTables/datatables.min.js"></script>

    <!-- Custom Table Script -->
    <script src="~/js/custom/ManageUsersTable.js"></script>

}
