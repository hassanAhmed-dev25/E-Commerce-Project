

<div class="container my-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-gear me-2 text-primary"></i>
                    @SharedLocalizer["ManageWithdrawals"]
                </h4>

            </div>

            <div class="table-responsive">
                <table id="ManageWithdrawals"
                       class="table table-hover align-middle w-100">

                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["Id"]</th>
                            <th>@SharedLocalizer["Username"]</th>
                            <th>@SharedLocalizer["Email"]</th>
                            <th>@SharedLocalizer["Amount"]</th>
                            <th>@SharedLocalizer["Status"]</th>
                            <th>@SharedLocalizer["RequestedAt"]</th>
                            <th>@SharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>


                </table>
            </div>

        </div>
    </div>
</div>


@section Scripts {

    <!-- Data Table -->
    <script src="~/DataTables/datatables.min.js"></script>

    <!-- Custom Table Script -->
    <script src="~/js/custom/ManageWithdrawals.js"></script>

}