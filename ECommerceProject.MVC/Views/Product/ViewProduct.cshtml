@using ECommerceProject.MVC.ViewModels
@model ProductDetailsVM

@{
    var prod = Model.Product;
    var isInCart = Model.IsInCart;


    ViewData["Title"] = prod.Name;

    var imageUrl = string.IsNullOrEmpty(prod.ImageUrl)
        ? Url.Content("~/images/no-image.png")
        : Url.Content($"~/Files/{prod.ImageUrl}");

    var inStock = prod.StockQuantity > 0;
}



<div class="container mt-5 mb-5">

    <div class="row g-5 align-items-start">

        <!-- Image Section -->
        <div class="col-lg-6">
            <div class="border rounded-4 p-4 bg-light text-center shadow-sm">
                <img src="@imageUrl"
                     class="img-fluid product-details-img"
                     alt="@prod.Name">
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">

            <!-- Category -->
            <span class="badge bg-dark-subtle text-dark mb-2">
                @prod.CategoryName
            </span>

            <!-- Name -->
            <h2 class="fw-bold mt-2">
                @prod.Name
            </h2>

            <!-- Price -->
            <h3 class="text-success fw-semibold mt-3">
                $ @prod.Price
            </h3>

            <!-- Stock -->
            @if (inStock)
            {
                <p class="text-success fw-semibold mt-2">
                    <i class="bi bi-check-circle"></i>
                    In Stock (@prod.StockQuantity available)
                </p>
            }
            else
            {
                <p class="text-danger fw-semibold mt-2">
                    <i class="bi bi-x-circle"></i>
                    Out of Stock
                </p>
            }


            <!-- Description -->
            <p class="text-muted mt-4 lh-lg">
                @(string.IsNullOrWhiteSpace(prod.Description)
                                ? "No description available for this product."
                                : prod.Description)
            </p>


            <!-- Quantity Selector -->
            <div class="mt-4">
                <label class="form-label fw-semibold">
                    Quantity
                </label>

                <div class="input-group quantity-selector" style="max-width: 150px;">
                    <button class="btn btn-outline-secondary btnMinus"
                            type="button"
                            @(inStock ? "" : "disabled")>
                        −
                    </button>

                    <input type="number"
                           id="quantityInput"
                           class="form-control text-center fw-semibold"
                           value="1"
                           min="1"
                           max="@prod.StockQuantity"
                           @(inStock ? "" : "disabled") />

                    <button class="btn btn-outline-secondary btnPlus"
                            type="button"
                            @(inStock ? "" : "disabled")>
                        +
                    </button>
                </div>

                <small class="text-muted d-block mt-1">
                    Max available: @prod.StockQuantity
                </small>
            </div>


            <!-- Actions -->
            <div class="d-flex gap-3 mt-4">

                @if (isInCart)
                {
                    <button class="btn btn-success btn-sm w-100" disabled>
                        Added to your cart
                    </button>
                }
                else
                {
                    <form asp-controller="CartItem"
                          asp-action="AddToCart"
                          method="post"
                          class="d-grid">

                        <input type="hidden" name="ProductId" value="@prod.Id" />
                        <input type="hidden" id="quantityHidden" name="Quantity" value="" />
                        <input type="hidden" name="UnitPrice" value="@prod.Price" />

                        <button type="submit" class="btn btn-primary btn-sm">
                            Add to cart
                        </button>
                    </form>
                }

                

                <button class="btn btn-outline-secondary px-4 py-2">
                    <i class="bi bi-heart"></i>
                    Wishlist
                </button>

            </div>


            <!-- Meta Info -->
            <div class="border-top pt-4 mt-5 small text-muted">
                <div class="d-flex justify-content-between">
                    <span>Created At</span>
                    <span>@prod.CreatedAt.ToString("dd MMM yyyy")</span>
                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            const $qty = $("#quantityInput");
            const $hiddenQty = $("#quantityHidden");

            function syncQuantity() {
                $hiddenQty.val($qty.val());
            }


            $(".btnPlus").on("click", function () {
                let current = parseInt($qty.val());
                let max = parseInt($qty.attr("max"));

                if (!isNaN(max) && current < max) {
                    $qty.val(current + 1);
                }
            });

            $(".btnMinus").on("click", function () {
                let current = parseInt($qty.val());
                if (current > 1) {
                    $qty.val(current - 1);
                }
            });


            
            // If user write manually
            $qty.on("change keyup", function () {
                syncQuantity();
            });

            // sync before send
            $("form").on("submit", function () {
                syncQuantity();
            });

        });
    </script>
}

