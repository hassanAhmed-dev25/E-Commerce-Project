@using ECommerceProject.MVC.ViewModels
@model IEnumerable<CartItemVM>

@{
    ViewData["Title"] = "Your Cart";
}





<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-cart3"></i>
        Shopping Cart
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-cart-x fs-3 d-block mb-2"></i>
            Your cart is empty
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var vm in Model)
                {
                    var item = vm.Items;
                    var maxQuantity = vm.MaxQuantity;

                    <div class="cart-item card mb-3 shadow-sm"
                         data-max="@maxQuantity">

                        <div class="card-body d-flex align-items-center gap-4">

                            <input type="checkbox"
                                   class="form-check-input cart-checkbox"
                                   data-price="@item.UnitPrice"
                                   checked />

                            <img src="~/images/no-image.png"
                                 class="cart-item-img rounded" />

                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                <small class="text-muted">
                                    Unit Price: $@item.UnitPrice
                                </small>
                            </div>

                            <!-- Quantity -->
                            <div class="quantity-box d-flex align-items-center gap-2">

                                <button class="btn btn-outline-secondary btn-sm qty-minus">-</button>

                                <span class="fw-semibold qty-value">
                                    @item.Quantity
                                </span>

                                <button class="btn btn-outline-secondary btn-sm qty-plus">+</button>
                            </div>

                            <div class="fw-bold text-success item-total"
                                 data-price="@item.UnitPrice">
                                $@(item.UnitPrice* item.Quantity)
                            </div>

                            <!-- Remove -->
                            <form asp-controller="CartItem"
                                  asp-action="RemoveFromCart"
                                  asp-route-cartItemId="@item.Id">


                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                        </div>
                    </div>
                }

            </div>
            

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm cart-summary">
                    <div class="card-body">

                        <h5 class="fw-bold mb-3">
                            Order Summary
                        </h5>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Items:</span>
                            <span id="selectedCount">@Model.Sum(x => x.Items.Quantity)</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <span class="fw-bold text-success">
                                $<span id="selectedTotal">@Model.Sum(x => x.Items.UnitPrice * x.Items.Quantity)</span>
                            </span>
                        </div>


                        <button class="btn btn-primary w-100 mt-3">
                            Proceed to Checkout
                        </button>

                    </div>
                </div>
            </div>

        </div>
    }

</div>



@section Scripts {
    <script>

        function updateSummary() {
            let total = 0;
            let count = 0;

            $(".cart-checkbox:checked").each(function () {
                const price = parseFloat($(this).data("price"));
                const card = $(this).closest(".cart-item");
                const qty = parseInt(card.find(".qty-value").text());

                total += price * qty;
                count += qty;
            });

            $("#selectedTotal").text(total.toFixed(2));
            $("#selectedCount").text(count);
        }

        function updateItemTotal(card, qty) {
            const price = parseFloat(card.find(".item-total").data("price"));
            card.find(".item-total").text("$" + (price * qty).toFixed(2));
        }

        $(document).ready(function () {

            // plus
                    $(".qty-plus").on("click", function () {
            const card = $(this).closest(".cart-item");
            const qtySpan = card.find(".qty-value");

            const maxQty = parseInt(card.data("max"));
            let qty = parseInt(qtySpan.text());

            if (qty < maxQty) {
                qty++;
                qtySpan.text(qty);

                updateItemTotal(card, qty);
                updateSummary();
            }
        });


            // minus
            $(".qty-minus").on("click", function () {
                const card = $(this).closest(".cart-item");
                const qtySpan = card.find(".qty-value");

                let qty = parseInt(qtySpan.text());

                if (qty > 1) {
                    qty--;
                    qtySpan.text(qty);

                    updateItemTotal(card, qty);
                    updateSummary();
                }
            });

            // checkbox change
            $(".cart-checkbox").on("change", function () {
                updateSummary();
            });

            // initial load
            updateSummary();
        });

    </script>
}

