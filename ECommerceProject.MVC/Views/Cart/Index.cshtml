@using ECommerceProject.MVC.ViewModels
@model IEnumerable<CartItemVM>


@Html.AntiForgeryToken()


@{
    ViewData["Title"] = "Your Cart";
}





<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-cart3"></i>
        @SharedLocalizer["ShoppingCart"]
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-cart-x fs-3 d-block mb-2"></i>
            @SharedLocalizer["YourCartIsEmpty"]
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var vm in Model)
                {
                    var item = vm.Items;
                    var maxQuantity = vm.MaxQuantity;

                    <div class="cart-item card mb-3 shadow-sm"
                         data-max="@maxQuantity">

                        <div class="card-body d-flex align-items-center gap-4">

                            <input type="checkbox"
                                   form="checkoutForm"
                                   name="SelectedCartItemIds"
                                   class="form-check-input cart-checkbox"
                                   value="@item.Id"
                                   data-price="@item.UnitPrice"
                                   checked />

                            <img src="~/images/no-image.png"
                                 class="cart-item-img rounded" />

                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                <small class="text-muted">
                                    @SharedLocalizer["UnitPrice"]: $@item.UnitPrice
                                </small>
                            </div>

                            <!-- Quantity -->
                            <div class="quantity-box d-flex align-items-center gap-2"
                                 data-cart-item-id="@item.Id">

                                <button type="button"
                                        class="btn btn-outline-secondary btn-sm qty-minus">
                                    -
                                </button>

                                <span class="fw-semibold qty-value">
                                    @item.Quantity
                                </span>

                                <button type="button"
                                        class="btn btn-outline-secondary btn-sm qty-plus">
                                    +
                                </button>
                            </div>

                            

                            <div class="fw-bold text-success item-total"
                                 data-price="@item.UnitPrice">
                                $@(item.UnitPrice* item.Quantity)
                            </div>

                            <!-- Remove -->
                            <button type="button"
                                    class="btn btn-outline-danger btn-sm remove-item-btn"
                                    data-cart-item-id="@item.Id">
                                <i class="bi bi-trash"></i>
                            </button>

                        </div>
                    </div>
                }

            </div>
            

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm cart-summary">
                    <div class="card-body">

                        <h5 class="fw-bold mb-3">
                            @SharedLocalizer["OrderSummary"]
                        </h5>

                        <div class="d-flex justify-content-between mb-2">
                            <span>@SharedLocalizer["Items"]:</span>
                            <span id="selectedCount">@Model.Sum(x => x.Items.Quantity)</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>@SharedLocalizer["Total"]:</span>
                            <span class="fw-bold text-success">
                                $<span id="selectedTotal">@Model.Sum(x => x.Items.UnitPrice * x.Items.Quantity)</span>
                            </span>
                        </div>


                        <form id="checkoutForm" asp-controller="Order" asp-action="Checkout" method="post">


                            <button type="submit" class="btn btn-primary w-100 mt-3">
                                @SharedLocalizer["ProceedToCheckout"]
                            </button>

                        </form>


                    </div>
                </div>
            </div>

        </div>
    }

</div>



@section Scripts {

    <script>

            function updateSummary() {
                let total = 0;
                let count = 0;

                $(".cart-checkbox:checked").each(function () {
                    const price = parseFloat($(this).data("price"));
                    const card = $(this).closest(".cart-item");
                    const qty = parseInt(card.find(".qty-value").text());

                    total += price * qty;
                    count += qty;
                });

                $("#selectedTotal").text(total.toFixed(2));
                $("#selectedCount").text(count);
            }


        $(document).ready(function () {

            const token = $('input[name="__RequestVerificationToken"]').val();

            /* ========= EDIT QUANTITY ========= */
            $(document).on("click", ".qty-plus, .qty-minus", function () {

                const btn = $(this);
                const box = btn.closest(".quantity-box");
                const cartItemId = box.data("cart-item-id");
                const action = btn.hasClass("qty-plus") ? "increase" : "decrease";
                const qtySpan = box.find(".qty-value");
                const card = btn.closest(".cart-item");
                const price = parseFloat(card.find(".item-total").data("price"));

                $.ajax({
                    url: "/CartItem/EditQuantityAjax",
                    type: "POST",
                    headers: { "RequestVerificationToken": token },
                    data: { cartItemId: cartItemId, action: action },
                    success: function (res) {

                        qtySpan.text(res.quantity);

                        // Update item total
                        card.find(".item-total")
                            .text("$" + (res.quantity * price).toFixed(2));

                        updateSummary();
                    },
                    error: function () {
                        alert("Failed to update quantity");
                    }
                });
            });

            /* ========= REMOVE ITEM ========= */
            $(document).on("click", ".remove-item-btn", function () {

                const btn = $(this);
                const card = btn.closest(".cart-item");
                const cartItemId = btn.data("cart-item-id");

                $.ajax({
                    url: "/CartItem/RemoveFromCartAjax",
                    type: "POST",
                    headers: { "RequestVerificationToken": token },
                    data: { cartItemId: cartItemId },
                    success: function () {

                        card.fadeOut(300, function () {
                            $(this).remove();
                            updateSummary();
                        });
                    },
                    error: function () {
                        alert("Failed to remove item");
                    }
                });
            });

        });
    </script>


}

