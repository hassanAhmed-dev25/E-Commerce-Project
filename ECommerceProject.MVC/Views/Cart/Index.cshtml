@using ECommerceProject.Application.DTOs.Cart
@model IEnumerable<CartItemDto>

@{
    ViewData["Title"] = "Your Cart";

}





<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-cart3"></i>
        Shopping Cart
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-cart-x fs-3 d-block mb-2"></i>
            Your cart is empty
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    var imageUrl = string.IsNullOrEmpty(item.ImageUrl)
                    ? Url.Content("~/images/no-image.png")
                    : Url.Content($"~/Files/{item.ImageUrl}");


                    // Cart Items
                    <div class="cart-item card mb-3 shadow-sm">
                        <div class="card-body d-flex align-items-center gap-4">

                            <!-- Select -->
                            <input type="checkbox"
                                   class="form-check-input cart-checkbox"
                                   data-price="@item.UnitPrice"
                                   data-qty="@item.Quantity"
                                   checked />

                            <!-- Image -->           @* Later i will add the actual image *@
                            <img src="~/images/no-image.png"   
                                 class="cart-item-img rounded"
                                 alt="@item.ProductName">

                            <!-- Info -->
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">
                                    @item.ProductName
                                </h6>

                                <small class="text-muted">
                                    Unit Price: $@item.UnitPrice
                                </small>
                            </div>

                            <!-- Quantity -->
                            <div class="quantity-box text-center">
                                <span class="fw-semibold">
                                    x @item.Quantity
                                </span>
                            </div>

                            <!-- Total -->
                            <div class="fw-bold text-success item-total">
                                $@(item.UnitPrice * item.Quantity)
                            </div>

                            <!-- Remove -->
                            <button class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </button>

                        </div>
                    </div>

                }

            </div>
            

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm cart-summary">
                    <div class="card-body">

                        <h5 class="fw-bold mb-3">
                            Order Summary
                        </h5>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Items</span>
                            <span id="selectedCount">@Model.Sum(x => x.Quantity)</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Total</span>
                            <span class="fw-bold text-success">
                                $<span id="selectedTotal">@Model.Sum(x => x.UnitPrice * x.Quantity)</span>
                            </span>
                        </div>


                        <button class="btn btn-primary w-100 mt-3">
                            Proceed to Checkout
                        </button>

                    </div>
                </div>
            </div>

        </div>
    }

</div>



@section Scripts {
    <script>
        function updateSummary() {

            let total = 0;
            let count = 0;

            $(".cart-checkbox:checked").each(function () {

                const price = parseFloat($(this).data("price"));
                const qty = parseInt($(this).data("qty"));

                total += price * qty;
                count += qty;
            });

            $("#selectedTotal").text(total.toFixed(2));
            $("#selectedCount").text(count);
        }

        $(document).ready(function () {

            updateSummary();

            $(".cart-checkbox").on("change", function () {
                updateSummary();
            });

        });
    </script>
}
