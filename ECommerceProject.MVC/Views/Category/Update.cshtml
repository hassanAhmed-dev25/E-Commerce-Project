@using ECommerceProject.Application.DTOs
@using ECommerceProject.Application.DTOs.Category
﻿

@model UpdateCategoryDto


<div class="w-100 card border-0 p-4">
    <div class="card-header gg-title ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@SharedLocalizer["UpdateCategory"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" asp-controller="Category" asp-action="Update">


            <input type="hidden" asp-for="Id" />

            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> @SharedLocalizer["Update"]
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> @SharedLocalizer["Cancel"]
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

