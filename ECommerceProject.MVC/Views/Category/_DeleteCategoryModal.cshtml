<div class="modal fade" tabindex="-1" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <p>@SharedLocalizer["DeleteCatgDesc"]<strong id="deleteCategoryName"></strong>@SharedLocalizer["Category!"]</p>
            </div>
            <div class="modal-footer">
                <form asp-controller="Category" asp-action="Delete" method="post">
                    <input type="hidden" id="deleteCategoryId" name="catgId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        @SharedLocalizer["Cancel"]
                    </button>
                    <button type="submit" class="btn btn-danger">
                        @SharedLocalizer["Delete"]
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('deleteModal');

    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const categoryId = button.getAttribute('data-id');
        const categoryName = button.getAttribute('data-content');

        document.getElementById('deleteCategoryId').value = categoryId;
        document.getElementById('deleteCategoryName').innerText = categoryName;
    });
</script>